<Window x:Class="PhoneBook.GUI.Windows.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="{StaticResource Title}" 
        
        Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Загрузить"
                      Click="MenuItemLoad_OnClick"/>
            <MenuItem Header="Добавить"
                      Click="MenuItemAdd_OnClick"/>
            <MenuItem Header="Изменить"
                      Click="MenuItemUpdate_OnClick"/>
            <MenuItem Header="Удалить"
                      Click="MenuItemDelete_OnClick"/>
            <MenuItem Header="Обновить"
                      Click="MenuItemReload_OnClick"/>
        </Menu>
        
        <ListBox x:Name="Abonents"/>
    </DockPanel>
</Window>
